        "max": 90,
        "min": 0
      }, {
        "type": "range",
        "id": "btn_horizontal_position_responsive",
        "label": "Button horizontal position[responsive]",
        "default": 0,
        "max": 90,
        "min": 0
      }, {
        "type": "text",
        "id": "title_mobile",
        "label": "Title mobile"
      }, {
        "type": "textarea",
        "id": "para_mobile",
        "label": "Info mobile"
      }
    ],
    "presets": [
      {
        "name": "Video section",
        "category": "Video"
      }
    ]
  }
{% endschema %}